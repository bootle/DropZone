<style type="text/css">
body {
	padding: 8px;
	margin: 0;
	font-family: 'Lucida Sans Unicode', 'Lucida Grande', sans-serif;
}

h1 {
	font-size: 30px;
	font-weight: bold;
	color: #202020;
	text-transform: uppercase; 
}


h2 {
	margin-top: 80px;
	font-size: 18px;
	color: #616161; 
}

ul {
}

.half {
	width: 600px;
